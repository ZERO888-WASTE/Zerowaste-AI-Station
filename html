  <script>
    const lineLoginChannelId = "2007537369"; // ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì
    const clientSecret = "‡πÉ‡∏™‡πà_CLIENT_SECRET_‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì"; // ‡∏≠‡∏¢‡πà‡∏≤‡∏•‡∏∑‡∏°‡πÉ‡∏™‡πà
    const redirectUri = window.location.href;

    function loginWithLINE() {
      const state = "zeroWasteTest";
      const scope = "profile openid";
      const response_type = "code";
      const url = `https://access.line.me/oauth2/v2.1/authorize?response_type=${response_type}&client_id=${lineLoginChannelId}&redirect_uri=${encodeURIComponent(redirectUri)}&state=${state}&scope=${scope}`;
      window.location.href = url;
    }

    async function fetchToken(code) {
      const tokenUrl = "https://api.line.me/oauth2/v2.1/token";
      const body = new URLSearchParams();
      body.append("grant_type", "authorization_code");
      body.append("code", code);
      body.append("redirect_uri", redirectUri);
      body.append("client_id", lineLoginChannelId);
      body.append("client_secret", clientSecret);

      const res = await fetch(tokenUrl, {
        method: "POST",
        headers: { "Content-Type": "application/x-www-form-urlencoded" },
        body: body.toString(),
      });

      if (!res.ok) throw new Error("‡πÅ‡∏•‡∏Å Token ‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ");
      return await res.json();
    }

    async function getProfile(accessToken) {
      const res = await fetch("https://api.line.me/v2/profile", {
        headers: { Authorization: Bearer ${accessToken} },
      });
      return await res.json();
    }

    async function handleCallback() {
      const urlParams = new URLSearchParams(window.location.search);
      const code = urlParams.get("code");
      if (!code) return;

      document.getElementById("login-box").style.display = "none";
      document.getElementById("register-box").style.display = "block";
      document.getElementById("loading").innerText = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•...";

      try {
        const tokenData = await fetchToken(code);
        const profile = await getProfile(tokenData.access_token);
        document.getElementById("userId").value = profile.userId;
        document.getElementById("loading").innerText = "";
      } catch (e) {
        document.getElementById("loading").innerText = "‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏õ‡∏±‡∏ç‡∏´‡∏≤‡∏Ç‡∏ì‡∏∞‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•";
      }
    }

    async function submitForm() {
      const userId = document.getElementById("userId").value;
      const firstName = document.getElementById("firstName").value;
      const lastName = document.getElementById("lastName").value;
      const studentId = document.getElementById("studentId").value;
      const phoneNumber = document.getElementById("phoneNumber").value;

      const url = `https://script.google.com/macros/s/AKfycbwcaUufiBL_os_x5qNPaqzOa6HUeIdi_G1qcgoxVqfUrk7BwuJP3KoDZX1nWPxRZq6qTg/exec?userId=${userId}&firstName=${firstName}&lastName=${lastName}&studentId=${studentId}&phoneNumber=${phoneNumber}`;

      document.getElementById("loading").innerText = "üîÑ ‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•...";

      try {
        const res = await fetch(url);
        const data = await res.json();
        if (data.status === "success") {
          document.getElementById("loading").innerText = "‚úÖ ‡∏™‡πà‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢‡πÅ‡∏•‡πâ‡∏ß";
        } else {
          document.getElementById("loading").innerText = "‚ùå " + data.message;
        }
      } catch (e) {
        document.getElementById("loading").innerText = "‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡πÑ‡∏î‡πâ";
      }
    }

    window.onload = handleCallback;
  </script>
